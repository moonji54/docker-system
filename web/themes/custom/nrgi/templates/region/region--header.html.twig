<header class="c-header" id="js-header">
  <div class="c-header__container o-container">
    <a href="/" class="c-header__logo" title="{{ 'Return to the homepage'|t }}">
      {% include '@nrgi/svg/svg.html.twig' with {'svg': 'header-logo', 'extra_class': 'c-header__svg'} %}
    </a>

    <div class="c-header__secondary-menu">
      {{ elements.topnavigation }}
    </div>


    <div class="c-header__main-menu js-main-menu-content">
      {{ elements.mainnavigation }}
    </div>

    <button class="c-header__burger-button js-burger-button"
            aria-label="{{ 'Toggle mobile menu'|t }}"
            aria-expanded="false"
            type="button">
      {% include '@nrgi/svg/svg.html.twig' with {'svg': 'burger-icon', 'extra_class': 'c-header__burger-open'} %}
      {% include '@nrgi/svg/svg.html.twig' with {'svg': 'close-icon','extra_class': 'c-header__burger-close'} %}
    </button>

    <div class="c-header__search">
      {{ elements.nrgi_search_form }}
    </div>
  </div>
</header>
