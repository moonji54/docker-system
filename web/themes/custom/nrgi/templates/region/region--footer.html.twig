    {# Logo and footer menu #}
    <div class="c-footer__bottom" style="display: flex;">
      {# Footer logo #}
      <a href="/" class="c-footer__logo" title="{{ 'Return to the homepage'|t }}">
        {% include '@nrgi/svg/svg.html.twig' with {'svg': 'logo'} %}
      </a>

      {# Footer menu #}
      <div class="c-footer__menu-wrapper">
        {{ elements.footer }}
