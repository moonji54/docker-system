{% set classes = [
  'c-card',
  'c-card--person'
] %}

  {% if title %}
    <article{{ attributes.addClass(classes) }}>
      {% if responsive_image %}
        <div class="c-card__image-wrapper">
          {% if responsive_image %}
            {{ responsive_image }}
          {% else %}
            <img src="/{{ base_path ~ directory }}/assets/img/fallback-default.svg" alt="{{ 'Fallback image'|t }}"/>
          {% endif %}
        </div>
      {% endif %}
      
      <div class="c-card__content-wrapper">
        <h3 class="c-card__title">
          <a class="c-card__link" href="{{ url }}">
            {{ title|field_value }}
          </a>
        </h3>

        {% if content.field_job_title|field_value %}
          <p class="c-card__job-title">
            {{ content.field_job_title|field_raw('value') }}
          </p>
        {% endif %}
      </div>

    </article>
  {% endif %}
