{% set classes = [
  'c-' ~ node.bundle|clean_class ~ '-banner',
] %}

{% if content.field_hero_title|field_value %}
  <section {{ attributes.addClass(classes) }}
      style="border: 1px dotted green; padding: 20px; background-color: darkgoldenrod">
    <div class="{{ classes.0 }}__container">
      <div class="{{ classes.0 }}__inner">

        {# Title #}
        <div class="{{ classes.0 }}__title">
          <h2>{{ content.field_hero_title }}</h2>
        </div>

        {# Description #}
        {% if content.field_hero_description|field_value %}
          <p class="{{ classes.0 }}__description">{{ content.field_hero_description }}</p>
        {% endif %}

        {# Button link #}
        {% if content.field_hero_link|field_value %}
          {{ content.field_hero_link }}
        {% endif %}
      </div>
    </div>

    {# Image #}
    {% if content.field_featured_image|field_value %}
      <div class=" c-homepage-banner__image-wrapper">
        {% if content.field_overlay_opacity|field_value %}
          [overlay]: {{ content.field_overlay_opacity }}
        {% endif %}
        {{ content.field_featured_image }}
      </div>
    {% else %}
      {# SBTODO: if no featured image, use nrgi brand shape #}
    {% endif %}
  </section>

  {# Manual language bar #}
  {% if language_bar_links %}
    {% include '@nrgi/node-partials/node--language-bar-links.html.twig' with {
      'text' : content.field_language_bar_text|field_value ?
      content.field_language_bar_text|field_raw('value') : "Explore content in",
      'links' : language_bar_links
    } %}
  {% endif %}

{% endif %}
