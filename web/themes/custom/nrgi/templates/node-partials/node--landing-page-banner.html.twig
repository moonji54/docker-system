{% set classes = [
  'c-' ~ node.bundle|clean_class ~ '-banner',
] %}

<section {{ attributes.addClass(classes) }}>
  {# Image #}
  {% if content.field_featured_image|field_value %}
    {{ content.field_featured_image }}

    {#    SBTODO to double check it #}
    {% if content.field_overlay_opacity|field_value >= 1 %}
      <div class="c-landing-page-banner__overlay" style="--hero-opacity: {{ content.field_overlay_opacity[0]['#markup'] }}"></div>
    {% endif %}
  {% else %}
    <img class="c-landing-page-banner__image-placeholder" src="/{{ base_path ~ directory }}/assets/img/hero-banner-placeholder.svg"
         alt="Image placeholder"/>
  {% endif %}

  <div class="c-landing-page-banner__container">
    <div class="c-landing-page-banner__text-wrapper">

      {# Title #}
      <div class="c-landing-page-banner__title">
        <h1>{{ label }}</h1>
      </div>

      {# Description #}
      {% if content.field_short_description|field_value %}
        <p class="c-landing-page-banner__description">{{ content.field_short_description }}</p>
      {% endif %}
    </div>

    {# Language switcher #}
    {% if language_switcher_links %}
      <div class="c-landing-page-banner__language-switcher-links">
        {% include '@nrgi/node-partials/node--language-switcher-links.html.twig' with {
          'text' :  "Other languages"|t,
          'links' : language_switcher_links
        } %}
      </div>
    {% endif %}

    {# Share buttons #}
    <div class="c-landing-page-banner__share-links">
      {% include '@nrgi/node-partials/node--share-links.html.twig' %}
    </div>
  </div>
</section>
