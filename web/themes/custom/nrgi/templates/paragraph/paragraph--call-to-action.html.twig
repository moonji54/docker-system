{% set classes = [
  'c-call-to-action',
  content.field_image|field_value ? 'c-call-to-action--with-image',
  'o-section',
  'o-section--has-background',
  'paragraph',
  'paragraph--type--' ~ paragraph.bundle|clean_class,
  view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
  not paragraph.isPublished() ? 'paragraph--unpublished'
] %}

<section{{ attributes.addClass(classes) }}>
  {# Image #}
  {% if content.field_image|field_value %}
    <div class="c-call-to-action__image-wrapper">
      {{ content.field_image }}
    </div>
  {% endif %}
  <div class="c-call-to-action__container o-container">
    <div class="c-call-to-action__inner">
      {# Title #}
      {% if content.field_title|field_value %}
        <h2 class="c-call-to-action__title">{{ content.field_title|field_value }}</h2>
      {% endif %}

      {# Description #}
      {% if content.field_description|field_value %}
        <p class="c-call-to-action__description">{{ content.field_description|field_value }}</p>
      {% endif %}

      {# Link #}
      {#
      On this component the editor can create a normal link or a download file link.
      paragraph.getLinkValues() automatically gets field values (as an array) with the right content dpeending on the editor choice.
      If you need to read the type to make the buttons look different just use link.type to check what kind of links you are rendering.
      #}
      {% set link = paragraph.link %}
      {% if link.url %}
        {#        <div>[Link Type] {{ link.type }}</div> #}
        <a class="c-call-to-action__link" href="{{ link.url }}"
           target="{{ link.is_external ? '_blank' : '_self' }}">
          {% include '@natcen/svg/svg.html.twig' with {'svg': 'arrow', 'extra_class': 'c-call-to-action__link-svg'} %}
          <span class="c-call-to-action__link-title">{{ link.title }}</span>
        </a>
      {% endif %}
    </div>
  </div>
</section>
